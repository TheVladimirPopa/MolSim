<Simulation_XML endTime="100" deltaT="0.0001" writeOutFrequency="50" filename="MD.vtk" cutOffRadius="2.3"
                gravity="1" radius_l="1.9" Model="SmoothedLennardJones">

    <Container_T>
        <LinkedCell cellSize="3">
            <leftLowerBound x="0" y="0" z="0"/>
            <rightUpperBound x="9.2" y="9.2" z="9.2"/>
            <left>PERIODIC</left>
            <right>PERIODIC</right>
            <top>PERIODIC</top>
            <bottom>PERIODIC</bottom>
            <front>PERIODIC</front>
            <back>PERIODIC</back>
        </LinkedCell>
    </Container_T>

    <Thermostat initialTemp="3.0" targetTemp="0.02" maxTempChange="0.0025" periodLength="1000" dimension="25"/>

    <InputFile path="./checkpoint.txt"/>

</Simulation_XML>